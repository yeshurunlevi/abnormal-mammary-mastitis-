    "import os\n",
    "import openslide\n",
    "import numpy as np\n",
    "import cv2\n",
    "from tqdm import tqdm\n",
    "from skimage.filters.rank import entropy\n",
    "from skimage.morphology import disk\n",
    "from skimage.util import img_as_ubyte\n",
    "\n",
    "# Configuration\n",
    "MRXS_FOLDER = \"F:\\\\Peleg\\\\2021-06-14 black box 3\"\n",# Original files path
    "OUTPUT_SIX = \"C:\\\\Users\\\\shpigel-lab\\\\Desktop\\\\tiles\\\\six\"\n", # Six hours after the infection
    "OUTPUT_TWELVE = \"C:\\\\Users\\\\shpigel-lab\\\\Desktop\\\\tiles\\\\twelve\"\n",# TWELVE hours after the infection
    "OUTPUT_TWENTY_FOUR = \"C:\\\\Users\\\\shpigel-lab\\\\Desktop\\\\tiles\\\\twenty_four\"\n",# TWENTY FOUR hours after the infection
    "\n",
    "PATCH_SIZE = 512\n",
    "STRIDE = 256\n",
    "LEVEL = 0\n",
    "BLACK_THRESHOLD = 0.8\n",
    "WHITE_THRESHOLD = 0.8\n",
    "ENTROPY_THRESHOLD = 3.0\n",
    "VARIANCE_THRESHOLD = 50.0\n",
    "\n",
    "# Create output folders\n",
    "os.makedirs(OUTPUT_SIX, exist_ok=True)\n",
    "os.makedirs(OUTPUT_TWELVE, exist_ok=True)\n",
    "os.makedirs(OUTPUT_TWENTY_FOUR, exist_ok=True)\n",
    "\n",
    "# Slide ID groups\n",
    "six_ids = [f\"2M{str(i).zfill(2)}\" for i in range(1, 4)] + [f\"1M{str(i)}\" for i in range(24, 26)]\n",
    "twelve_ids = [f\"1M{str(i)}\" for i in range(18, 24)]\n",
    "twenty_four_ids = [f\"1M{str(i)}\" for i in range(13, 18)]\n",
    "\n",
    "def is_bad_patch(patch_np):\n",# Delete Delete slides that are white, black, or have too low variation and entropy levels to prevent excessive loading of tiles.
    "    gray = cv2.cvtColor(patch_np, cv2.COLOR_RGB2GRAY)\n",
    "    total = gray.size\n",
    "    black = np.sum(gray < 20)\n",
    "    white = np.sum(gray > 235)\n",
    "\n",
    "    if (black / total > BLACK_THRESHOLD) or (white / total > WHITE_THRESHOLD):\n",
    "        return True\n",
    "\n",
    "    ent = entropy(img_as_ubyte(gray), disk(5))\n",
    "    if np.mean(ent) < ENTROPY_THRESHOLD:\n",
    "        return True\n",
    "\n",
    "    var = np.var(gray)\n",
    "    if var < VARIANCE_THRESHOLD:\n",
    "        return True\n",
    "\n",
    "    return False\n",
    "\n",
    "def extract_patches(slide_path, slide_name, output_folder):\n",
    "    slide = openslide.OpenSlide(slide_path)\n",
    "    w, h = slide.level_dimensions[LEVEL]\n",
    "    saved = 0\n",
    "\n",
    "    for y in tqdm(range(0, h - PATCH_SIZE, STRIDE), desc=slide_name):\n",
    "        for x in range(0, w - PATCH_SIZE, STRIDE):\n",
    "            patch = slide.read_region((x, y), LEVEL, (PATCH_SIZE, PATCH_SIZE)).convert(\"RGB\")\n",
    "            patch_np = np.array(patch)\n",
    "\n",
    "            if is_bad_patch(patch_np):\n",
    "                continue\n",
    "\n",
    "            fname = f\"{slide_name}_{x}_{y}.png\"\n",
    "            cv2.imwrite(os.path.join(output_folder, fname), cv2.cvtColor(patch_np, cv2.COLOR_RGB2BGR))\n",
    "            saved += 1\n",
    "\n",
    "    print(f\"{slide_name}: saved {saved} tiles.\")\n",
    "\n",
    "# Run extraction\n",
    "for slide_id in six_ids + twelve_ids + twenty_four_ids:\n",
    "    slide_path = os.path.join(MRXS_FOLDER, f\"{slide_id}.mrxs\")\n",
    "    if not os.path.exists(slide_path):\n",
    "        print(f\"⚠️ Missing file: {slide_path}\")\n",
    "        continue\n",
    "\n",
    "    if slide_id in six_ids:\n",
    "        output = OUTPUT_SIX\n",
    "    elif slide_id in twelve_ids:\n",
    "        output = OUTPUT_TWELVE\n",
    "    elif slide_id in twenty_four_ids:\n",
    "        output = OUTPUT_TWENTY_FOUR\n",
    "    else:\n",
    "        continue\n",
    "\n",
    "    extract_patches(slide_path, slide_id, output)\n"
   ]
  }
